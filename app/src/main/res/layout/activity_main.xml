<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClickEditActivity"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/one_pixel"
        android:id="@+id/preview"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="352dp"
        android:layout_height="248dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarWidth"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="100"
                android:progress="51" />

            <TextView
                android:id="@+id/textViewWidth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="width" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarHeight"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="100"
                android:progress="51" />

            <TextView
                android:id="@+id/textViewHeight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarSigmaX"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="100"
                android:progress="51" />

            <TextView
                android:id="@+id/textViewSigmaX"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="sigmaX" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEditActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickEditActivity"
            android:text="EditActivity" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>